# List available operations
list:
  just -l

# Open documentation
docs: render
  open documentation.pdf

# Render PDF
render: diagrams
  pandoc \
   -o documentation.pdf \
   --metadata-file metadata.yaml \
   `find . -iname "*.md" | sort`

# Remove generated files
clean:
  rm -rf documentation.pdf assets/diagrams

# Generate PlantUML diagrams
diagrams:
  plantuml -o ../assets/diagrams -tsvg diagrams/*.puml
